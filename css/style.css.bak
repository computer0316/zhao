html,body{
	margin:0px;
}
/********** 头部 **********/
header{
	width:1200px;
	height:100px;
	margin:0px auto;
}
#title{
	font: normal 36px 微软雅黑;
	color: #C00000;
	line-height:100px;
}

.contact{
	font: normal 24px Georgia;
	float:right;
	clear:right;
	line-height:0px;
}

nav{
	width:100%;
	height:48px;
	background:#C00000;
}
#nav{
	width:1200px;
	margin:0px auto;
	color:white;
	line-height:48px;
	font-size:18px;
}

/********** 节通用 **********/
.section{
	position:relative;
	width:100%;
}
.sectionTitle{
	font: normal 36px 微软雅黑;
	margin:auto;
	width:148px;
	line-height:96px;
}
.sectionLine:before{
	content:"—————————————————————————————　";
}
.sectionLine{
	font: normal 14px 微软雅黑;
	color:#ccc;
	margin:auto;
	width:1200px;
	text-align:center;
}
.sectionLine:after{
	content:"　—————————————————————————————";
}

#section1{
	position:relative;
	height:600px;
}
#back{
	width:100%;
	height:600px;
}

/********** 机械设备 专家 **********/
#backInfo1, #backInfo2{
	position:absolute;
	margin:auto;
	left:0;top:0;right:0;bottom:0;
	width:800px;
	height:80px;
	border-left:10px solid red;
	padding-left:10px;
	margin-top:150px;
	color:white;
}

#backInfoP1{
	float:left;
	font: normal 48px 微软雅黑;
	margin-top:-10px;
}
#backInfoP2{
	float:left;
	clear:left;
	font: normal 18px Georgia,serif;
	margin-top:-45px;
}
#backInfoImg{
	margin-left:30px;
	margin-top:-10px;
}

/********** section2 **********/
#section2{
	height:700px;
}
.s2Box{
	position:absolute;
	margin:auto;
	left:0;top:0;right:0;bottom:0;
	height:500px;
}
#s2Box1{
	margin-top:150px;
	width:800px;
	height:450px;
}
#s2Box2{
	margin-top:290px;
	width:850px;
	height:400px;
}

.fourBox{
	position:absolute;
	text-align:center;
}
.leftTop{
	left:0;top:0;
}
.rightTop{
	right:0;top:0;
}
.leftBottom{
	left:0;bottom:0;
}
.rightBottom{
	right:0;bottom:0;
}

.pTitle{
	font: normal 18px 微软雅黑;
	color:#666;
}
.pContent{
	font: normal 12px 微软雅黑;
	color:#aaa;
}
#centerBox,#centerBox1{
	position:absolute;
	margin:auto;
	margin-top:230px;
	left:0;top:0;right:0;bottom:0;
	width:343px;
	height:343px;
}
#centerBox1{
	text-align:center;
	margin-top:330px;
}
/********** section3 **********/
#section3{
	position:relative;
	height:400px;
}
#s3Back{
	position:absolute;
	left:0;top:0;
	z-index:-1;
}
#s3Box{
	width:1200px;
	margin:auto;
	height:400px;	
}
.s3BoxIn{
	float:left;
	width:380px;
	margin-left:200px;
	padding-left:20px;
	border:1px solid blue;
}
/********** section4 **********/
#section4{
	height:400px;
}
